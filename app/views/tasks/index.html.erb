<% # Go to controller and then you'll see the variable given %>
<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
<% # instance variable is here %>
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
